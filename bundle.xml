<?xml version="1.0" encoding="utf-8"?>
<adapt_framework>
  <bundle>
    <label>Adapt Form Date and Time controls</label>
    <name>form_datetime_picker</name>
    <type>extension</type>
    <version>1.0.0</version>
    <namespace>\adapt\forms\datetime_picker</namespace>
    <version_status>release</version_status>
    <availability>public</availability>
    <description />
    <license>MIT</license>
    <copyright>2015 Adapt Framework</copyright>
    <depends_on>
      <bundle>
        <name>bootstrap_datetimepicker</name>
        <version>4.14</version>
      </bundle>
      <bundle>
        <name>jquery</name>
      </bundle>
      <bundle>
        <name>forms</name>
        <version>1.0</version>
      </bundle>
      <bundle>
        <name>adapt</name>
        <version>2.0</version>
      </bundle>
    </depends_on>
    <schema>
      <add>
        <table name="form_field_type">
          <record>
            <name>Datetime picker</name>
            <view>\adapt\forms\datetime_picker\view_field_datetime_picker</view>
          </record>
          <record>
            <name>Date picker</name>
            <view>\adapt\forms\datetime_picker\view_field_date_picker</view>
          </record>
          <record>
            <name>Time picker</name>
            <view>\adapt\forms\datetime_picker\view_field_time_picker</view>
          </record>
          <record>
            <name>Range datetime picker</name>
            <view>\adapt\forms\datetime_picker\view_field_range_datetime_picker</view>
          </record>
          <record>
            <name>Range date picker</name>
            <view>\adapt\forms\datetime_picker\view_field_range_date_picker</view>
          </record>
          <record>
            <name>Range time picker</name>
            <view>\adapt\forms\datetime_picker\view_field_range_time_picker</view>
          </record>
          <record>
            <name>Date of birth picker</name>
            <view>\adapt\forms\datetime_picker\view_field_dob_picker</view>
          </record>
          <record>
            <name>Future datetime picker</name>
            <view>\adapt\forms\datetime_picker\view_field_future_datetime_picker</view>
          </record>
          <record>
            <name>Future date picker</name>
            <view>\adapt\forms\datetime_picker\view_field_future_date_picker</view>
          </record>
          <record>
            <name>Future time picker</name>
            <view>\adapt\forms\datetime_picker\view_field_future_time_picker</view>
          </record>
          <record>
            <name>Past datetime picker</name>
            <view>\adapt\forms\datetime_picker\view_field_past_datetime_picker</view>
          </record>
          <record>
            <name>Past date picker</name>
            <view>\adapt\forms\datetime_picker\view_field_past_date_picker</view>
          </record>
          <record>
            <name>Past time picker</name>
            <view>\adapt\forms\datetime_picker\view_field_past_time_picker</view>
          </record>
        </table>
      </add>
    </schema>
  </bundle>
</adapt_framework>
